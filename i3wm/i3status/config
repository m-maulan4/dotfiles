# i3status configuration

# Global settings
general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

# Configure individual modules
order += "wireless wlp3s0"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "volume master"
order += "time"

wireless wlp3s0 {
    format_up = " %essid"
    format_down = "WiFi "
}

cpu_usage {
    format = " %usage"
}

memory {
    format = " %used"
}

battery 0 {
    format="%status %percentage"
    last_full_capacity = true
    status_chr = ""
    status_full = ""
    status_bat = ""
    status_idle  =""

}

time {
    format = "%d-%m-%Y %H:%M "
}

volume master {
    format = " %volume"
    format_muted = " x%"
    device = "default"
}
