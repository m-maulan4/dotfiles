# i3status configuration

# Global settings
general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

# Configure individual modules
#order += "read_file UPTIME"
order += "wireless wlp3s0"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "volume master"
order += "disk /"
order += "time"

wireless wlp3s0 {
    format_up = "WiFi %essid"
    format_down = "DOWN"
}

cpu_usage {
    format = "CPU %usage"
}

memory {
    format = "RAM %used"
}

battery 0 {
    format="BAT %percentage [%status]"
    last_full_capacity = true
}

disk / {
    format = "SSD %avail"
}

time {
    format = "%d-%m-%Y %H:%M "
}
volume master {
    format = "Vol %volume"
    format_muted = "Vol x%"
    device = "default"
}
